<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mercie.example.HairFragment">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/dandruff"
            android:textSize="22sp"
            android:text="Dandruff"
            android:textColor="#fff"
            android:gravity="bottom"
            android:background="@drawable/groundthree"
            android:layout_width="match_parent"
            android:layout_height="250dp" />
        <Button
            android:id="@+id/splitends"
            android:textSize="22sp"
            android:text="Split Ends"
            android:textColor="#fff"
            android:gravity="bottom"
            android:background="@drawable/groundthree"
            android:layout_width="match_parent"
            android:layout_height="250dp" />
        <Button
            android:textSize="22sp"
            android:text="Greying Hair"
            android:textColor="#fff"
            android:gravity="bottom"
            android:background="@drawable/groundthree"
            android:layout_width="match_parent"
            android:layout_height="250dp" />
        <Button
            android:textSize="22sp"
            android:text="Hair Fall"
            android:textColor="#fff"
            android:gravity="bottom"
            android:background="@drawable/groundthree"
            android:layout_width="match_parent"
            android:layout_height="250dp" />
        <Button
            android:textSize="22sp"
            android:text="Head Lice"
            android:textColor="#fff"
            android:gravity="bottom"
            android:background="@drawable/groundthree"
            android:layout_width="match_parent"
            android:layout_height="250dp" />
        <Button
            android:textSize="22sp"
            android:text="Dry and Damaged Hair"
            android:textColor="#fff"
            android:gravity="bottom"
            android:background="@drawable/groundthree"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            />

    </LinearLayout>

</ScrollView>
